<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ComparadorDePrecos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ComparadorDePrecos.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Icon="{OnPlatform 'home.png'}" />
        <ShellContent
            Title="Unidade"
            ContentTemplate="{DataTemplate views:UnidadePage}"
            Icon="{OnPlatform 'grid.png'}" />
        <ShellContent
            Title="Capacidade"
            ContentTemplate="{DataTemplate views:CapacidadePage}"
            Icon="{OnPlatform 'capacidade.png'}" />
        <ShellContent
            Title="Massa"
            ContentTemplate="{DataTemplate views:MassaPage}"
            Icon="{OnPlatform 'dashboard.png'}" />
        <ShellContent
            Title="Comprimento"
            ContentTemplate="{DataTemplate views:ComprimentoPage}"
            Icon="{OnPlatform 'comprimento.png'}" />
    </TabBar>

</Shell>
